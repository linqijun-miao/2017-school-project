<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/main_left_drawer">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/activity_main_page" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/main_left_drawer_liner"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/colorDanke"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:id="@+id/main_draw_photo"
                android:scaleType="centerCrop"
                android:layout_marginTop="26dp"
                android:layout_marginLeft="25dp"
                android:background="@color/colorDanke"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="22dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/colorDeepGray"/>
                    <TextView
                        android:id="@+id/qw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/colorDeepGray"/>
                    <TextView
                        android:id="@+id/tq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/colorDeepGray"/>
                    <TextView
                        android:id="@+id/fl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/colorDeepGray"/>
                </LinearLayout>
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/tem_photo"
                    android:scaleType="centerInside"
                    android:background="@color/colorDanke"
                    />

            </LinearLayout>


        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_grid_add"
            android:text="add friends"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="28dp"
            android:background="@color/colorDanke"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_exit"
            android:text="exit"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="28dp"
            android:background="@color/colorDanke"/>


        <ImageView
            android:layout_width="260dp"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:background="@drawable/gridview_photo"/>

        <ImageButton
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="16dp"
            android:id="@+id/temp_refresh"
            android:scaleType="centerInside"
            android:background="@color/colorDanke"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/update_time"
            android:textSize="14dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="16dp"
            android:textColor="@color/colorDeepGray"/>


    </LinearLayout>
</android.support.v4.widget.DrawerLayout>